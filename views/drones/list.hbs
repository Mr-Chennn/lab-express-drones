<h2>Available drones</h2>

{{#each drones}}
<section>
    <h3>{{this.name}}</h3>
    <h3>{{this.maxSpeed}}</h3>
    <h3>{{this.propellers}}</h3>

    <a href="/drones/{{_id}}/edit">Edit</a>

    <form action="/drones/{{_id}}/delete" method="POST">

        <button>Delete</button>
    </form>


</section>
{{/each}}